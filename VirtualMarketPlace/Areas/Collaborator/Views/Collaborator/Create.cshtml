@model Domain.Models.CollaboratorModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Collaborator/Views/Shared/_Layout.cshtml";
}

<h1>Create Collaborator</h1>
<div class="text-right">
    <a asp-action="index" class="btn btn-light"> <span class="fa fa-arrow-circle-left"></span> Get Back </a>
</div>

<hr />

<form method="post" asp-action="Create">
    <div class="card">
        <div class="card-body">
            <div class="my-3 p-3 pb-4 pt-3 bg-white-50 rounded shadow">
                <div class="row">
                    <div class="col-md-4">
                        <label class="font-weight-bold" asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Type the collaborator name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" type="text" placeholder="Type the collaborator e-mail" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Collaborator Type:</label>
                        <select asp-for="CollaboratorTypeId" asp-items="ViewBag.CollaboratorTypes" class="form-control">
                        </select>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-footer">
            <div >
                <button type="submit" class="btn btn-success"> <span class="fa fa-save"></span> Save</button>
            </div>
        </div>
    </div>


</form>


