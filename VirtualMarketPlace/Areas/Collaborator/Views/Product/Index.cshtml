@model X.PagedList.IPagedList<Domain.Models.ProductModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Collaborator/Views/Shared/_Layout.cshtml";

    string search = Context.Request.Query["searchName"];
}


<h1 class="section-header"><i class="fas fa-shopping-cart"></i> Products</h1>

@if (TempData["MSG_S"] != null)
{
    <div class="alert alert-success text-center">
        <h5>  @TempData["MSG_S"] </h5>
    </div>
}
<div class="text-right">
    <a asp-action="Create" class="btn btn-primary "><span class="fa fa-plus-circle"></span> Create</a>
</div>


<form method="get">
    <div class="my-3 p-3 bg-white-50  rounded shadow-sm ">
        <h4 class="section-header"> Filters</h4>
        <div class="row align-items-end">
            <div class="col-md-4">
                <label class="font-weight-bold" for="Name">Name:</label>
                <input name="search" id="search" value="@search" class="form-control" type="text" placeholder="Type the product name" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success"> <span class="fa fa-search"></span> Search</button>
            </div>
        </div>
    </div>

</form>


@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Value</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Category.Name</td>
                        <td>R$ @product.Value</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-success"><span class="fa fa-pencil-alt"></span>  </a>
                            <button id="categoryDelete" onclick="deleteProduct(@product.Id);" asp-route-id="@product.Id" class="btn btn-danger"> <span class="fa fa-trash"></span> </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @Html.PagedListPager((IPagedList)Model, index => Url.Action("Index", new { index = index, search = search }))
}
else
{
    <div class="alert alert-danger text-center">
        <h4>  We don't have any register of products in our database! </h4>
    </div>
}

@section scripts
{
    s
}
