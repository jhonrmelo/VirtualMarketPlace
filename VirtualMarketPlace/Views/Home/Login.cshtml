@model VirtualMarketPlace.Domain.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4 formCenter">
            <h3 class="subtitle-doc">
                Login
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @{
                            if (!(Model?.LoginReturn is null))
                            {
                                if (Model.LoginReturn.HasException)
                                {
                                    <p class="alert alert-danger">@Html.Raw(Model.LoginReturn.ExceptionMessage) </p>
                                }
                            }
                        }
                        <a asp-action="CreateUser" asp-controller="Home" class="float-right btn btn-outline-primary">Sign up</a>
                        <h4 class="card-title mb-4 mt-1">Sign in</h4>
                        <form method="post">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" type="email">
                            </div>
                            <div class="form-group">
                                <a class="float-right" href="#">Forgot your password?</a>
                                <label>Your password</label>
                                <input asp-for="Password" class="form-control" placeholder="******" type="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>

</main>

