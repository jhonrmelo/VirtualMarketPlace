@model X.PagedList.IPagedList<Domain.Models.CollaboratorModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Collaborator/Views/Shared/_Layout.cshtml";
}

<h1 class="section-header"><span class="fa fa-user"></span> Collaborators</h1>

<div class="text-right">
    <a asp-action="Create" class="btn btn-primary "><span class="fa fa-plus-circle"></span> Create</a>

</div>


<div class="mt-3">

    @if (TempData["MSG_S"] != null)
    {
        <div class="alert alert-success text-center">
            <h5>  @TempData["MSG_S"] </h5>
        </div>
    }

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td scope="col">#</td>
                        <td scope="col">Name</td>
                        <td scope="col">Email</td>
                        <td scope="col">Collaborator Type</td>
                        <td scope="col">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var collaborator in Model)
                    {
                        <tr>
                            <th scope="row">@collaborator.Id</th>
                            <td scope="row">@collaborator.Name </td>
                            <td scope="row">@collaborator.Name</td>
                            <td scope="row">@collaborator.CollaboratorType.Description</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@collaborator.Id" class="btn btn-success"><span class="fa fa-pencil-alt"></span>  </a>
                                <button id="collaboratorDelete" data-name="@collaborator.Name" onclick="deleteCategory(event, this ,@collaborator.Id)" class="btn btn-danger"> <span class="fa fa-trash"></span> </button>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    }
    else
    {
        <div class="alert alert-danger text-center">
            <h4>  We don't have any register of collaborators in our database! </h4>
        </div>
    }

</div>


@section Scripts
{
    <script src="~/Site/js/collaborator/collaborator.js"></script>
}


